{% extends 'layout.html.twig' %}
{% block title %}
List all categories
{% endblock %}

{% block content %}
<section>
    <h1 class="text-center">Listes des Categories</h1>
    <table class="table">
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td><a class="" href="category/{{ category.id }}">{{ category.name }}</a></td>
                <td><a class="badge badge-secondary" href="category/edit/{{ category.id }}">editer</a></td>
                <td><a class="badge badge-danger" href="category/delete/{{ category.id }}">supprimer</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-primary" href="/category/add">Ajouter une category</a>
</section>
{% endblock %}
